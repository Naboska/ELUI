{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["./components/*"],
      "lib/*": ["./lib/*"]
    },
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "error",
    "declaration": true,
    "isolatedModules": true,
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "typeRoots": ["./@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__/**", "**/*.test.ts"]
}
